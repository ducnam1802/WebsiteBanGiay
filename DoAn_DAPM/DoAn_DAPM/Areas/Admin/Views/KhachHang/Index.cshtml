@model IEnumerable<DoAn_DAPM.Models.NguoiDung>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";

}
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" id="success-alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" id="error-alert">
        @TempData["ErrorMessage"]
    </div>
}
<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/css/bootstrap.css" />


<ol class="breadcrumb">
    <li class="breadcrumb-item custom-title">Danh sách khách hàng</li>
</ol>
<p>
    <a href="@Url.Action("Add")" class="add-customer-button">Thêm Khách hàng</a>
</p>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Mã người dùng")</th>
                    <th>@Html.DisplayName("Tên người dùng")</th>
                    <th>@Html.DisplayName("Tài khoản")</th>
                    <th>@Html.DisplayName("Mật Khẩu")</th>
                    <th>@Html.DisplayName("Email")</th>
                    <th>@Html.DisplayName("Số ĐT")</th>
                    <th>@Html.DisplayName("Địa chỉ")</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaNguoiDung)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenNguoiDung)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
                        <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                        <td class="action-buttons">
                            <a href="@Url.Action("Edit", new { id = item.MaNguoiDung })" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="@Url.Action("Delete", new { id = item.MaNguoiDung })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });

        $("#error-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#error-alert").slideUp(500);
        });
    });
</script>