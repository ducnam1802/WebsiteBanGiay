@model DoAn_DAPM.Models.DonHang
@{
    ViewBag.Title = "ChitietDH";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/css/bootstrap.css" />


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","DonHang")">Đơn hàng</a>
    </li>
    <li class="breadcrumb-item active">Chi tiết đơn hàng</li>
</ol>
<div>
    <div class="card-header">
        <i class="fa fa-table"></i> Chi tiết
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Mã Sản Phẩm</th>
                    <th>Ảnh sản phẩm</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Màu sắc</th>
                    <th>Kích cỡ</th>
                    <th>Số Lượng</th>
                    <th>Tổng hóa đơn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var chiTiet in Model.ChiTietDonHangs)
                {
                    <tr>
                        <td>@chiTiet.MaSP</td>
                        <td>
                            @if (chiTiet.SanPham.SanPham_Anh.Any())
                            {
                                var firstImage = chiTiet.SanPham.SanPham_Anh.First();
                                <img src="@firstImage.Anh" alt="@chiTiet.SanPham.TenSP" style="width:80px; height:80px" />
                            }
                        </td>
                        <td>@chiTiet.SanPham.TenSP</td>
                        <td>@chiTiet.SanPham.MauSac.TenMauSac</td>
                        <td>@chiTiet.SanPham.KichCo.KichCo1</td>
                        <td>@chiTiet.SoLuong</td>
                        <td>
                            <span style="font-weight:bold; text-align:right; color:red;">@string.Format("{0:0,0}", @chiTiet.Gia)</span>
                            <a style="color: red; margin-bottom: 0; font-weight: bold">VND</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

