@model DoAn_DAPM.Models.SanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/css/bootstrap.css" />

<div class="container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Product")">Sản phẩm</a></li>
        <li class="breadcrumb-item active">Thêm sản phẩm</li>
    </ol>

    <h2>Thêm Sản Phẩm Mới</h2>

    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenSP, "Tên Sản Phẩm", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenSP, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.TenSP,"", new {@class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaSP, "Giá Sản Phẩm", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GiaSP, "Tên Sản Phẩm", new { @class = "form-control", required = "required", type = "number", min = "0" })
                @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTA, "Mô Tả SP", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MoTA, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.MoTA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, "Số Lượng SP", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SoLuong, new { @class = "form-control", required = "required", type = "number", min = "0" })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Màu Sắc", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaMauSac", (SelectList)ViewBag.MauSacList, "Chọn Màu Sắc", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kích Cỡ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaKichCo", (SelectList)ViewBag.KichCoList, "Chọn Kích Cỡ", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Thương Hiệu", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaThuongHieu", (SelectList)ViewBag.ThuongHieuList, "Chọn Thương Hiệu", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Hình Ảnh", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" required class="form-control alert-success" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
