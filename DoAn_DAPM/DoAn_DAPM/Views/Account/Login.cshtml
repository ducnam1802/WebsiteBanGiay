@model DoAn_DAPM.Models.NguoiDung
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/css/style.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />


<div class="container1">
    <div class="card card-login mx-auto mt-3">
        <div class="card-header" style="margin-right: 5px"><h3>Đăng Nhập</h3></div>
        @using (Html.BeginForm( ))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    <div class="control-label col-md-10">
        <div class="form-group">
            <label for="exampleInputTaiKhoan1"><h5>Tên Đăng Nhập</h5></label>
            @Html.TextBoxFor(u => u.TenDangNhap, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.TenDangNhap)
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1"><h5>Mật khẩu</h5></label>
            @Html.PasswordFor(u => u.MatKhau, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.MatKhau)
        </div>
        <input class="btn btn-primary" type="submit" value="Đăng Nhập" />
    </div>
        }
        <br />
        <div class="control-label col-md-7">
            <h6>Bạn chưa có tài khoản</h6>
            <a href="@Url.Action("Register", "Account")"><input class="btn btn-primary " value="Tạo tài khoản" /></a>
            <br />
            <a href="@Url.Action("Index","Home")"><h6>Quay Lại Trang Chủ</h6></a>
        </div>
    </div>
</div>
